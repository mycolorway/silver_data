<%= form_for([@company, employee]) do |f| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :joined_at %>
    <%= f.datetime_select :joined_at %>
  </div>

  <div class="field">
    <%= f.label :regularized_at %>
    <%= f.datetime_select :regularized_at %>
  </div>

  <div class="field">
    <%= f.label :department_id %>
    <%= f.select :department_id, @company.departments.collect { |d| [ d.name, d.id ] }, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :salary %>
    <%= f.text_field :salary %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
