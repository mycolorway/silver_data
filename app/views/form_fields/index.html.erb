<p id="notice"><%= notice %></p>

<h1>Form Fields</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Hint</th>
      <th>Data type</th>
      <th>Default value</th>
      <th>Validation options</th>
      <th>Form group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= field.title %></td>
        <td><%= field.hint %></td>
        <td><%= field.data_type %></td>
        <td><%= field.default_value %></td>
        <td><%= field.validation_options %></td>
        <td><%= field.form_group %></td>
        <td><%= link_to 'Show', field %></td>
        <td><%= link_to 'Edit', edit_form_field_path(form_field) %></td>
        <td><%= link_to 'Destroy', form_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

