<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= link_to 'Show', company_department_path(@company, department) %></td>
        <td><%= link_to 'Edit', edit_company_department_path(@company, department) %></td>
        <td><%= link_to 'Destroy', company_department_path(@company, department), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_company_department_path(@company) %> |
<%= link_to 'Back', company_path(@company) %>

