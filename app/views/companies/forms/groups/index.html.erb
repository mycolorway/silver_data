<p id="notice"><%= notice %></p>

<h1>Form Groups</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Options</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.title %></td>
        <td><%= group.options %></td>
        <td><%= link_to 'Show', company_form_group_path(@company, @form, group) %></td>
        <td><%= link_to 'Edit', edit_company_form_group_path(@company, @form, group) %></td>
        <td><%= link_to 'Destroy', company_form_group_path(@company, @form, group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_company_form_group_path(@company, @form) %> |
<%= link_to 'Back', company_form_path(@company, @form) %>
