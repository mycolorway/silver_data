  <%= @form.description %>
</p>

<%= form_for @instance, as: :form, url: '#', method: :get do |f| %>
    <% if @instance.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@instance.errors.count, "error") %> prohibited this group from being saved:</h2>

        <ul>
          <% @instance.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= render 'form', f: f, model: @model, instance: @instance %>

    <%= f.submit %>
<% end %>


