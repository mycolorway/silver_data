<%= form_for(form_field) do |f| %>
  <% if form_field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form_field.errors.count, "error") %> prohibited this form_field from being saved:</h2>

      <ul>
      <% form_field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :hint %>
    <%= f.text_field :hint %>
  </div>

  <div class="field">
    <%= f.label :data_type %>
    <%= f.text_field :data_type %>
  </div>

  <div class="field">
    <%= f.label :default_value %>
    <%= f.text_field :default_value %>
  </div>

  <div class="field">
    <%= f.label :validation_options %>
    <%= f.text_area :validation_options %>
  </div>

  <div class="field">
    <%= f.label :form_group_id %>
    <%= f.text_field :form_group_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
