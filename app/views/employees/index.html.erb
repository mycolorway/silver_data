<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Joined at</th>
      <th>Regularized at</th>
      <th>Department</th>
      <th>Phone</th>
      <th>Salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.joined_at %></td>
        <td><%= employee.regularized_at %></td>
        <td><%= employee.department.name %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.salary %></td>
        <td><%= link_to 'Show', company_employee_path(@company, employee) %></td>
        <td><%= link_to 'Edit', edit_company_employee_path(@company, employee) %></td>
        <td><%= link_to 'Destroy', company_employee_path(@company, employee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_company_employee_path(@company) %> |
<%= link_to 'Back', company_path(@company) %>
